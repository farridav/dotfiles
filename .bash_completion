#!/bin/bash

parse_git_remote () {
    git ls-remote --get-url 2> /dev/null | sed s/git@github.com:/https\:\\/\\/github.com\\// | sed s/.git$//
}

complete_sb () {
    SB_REPOS='/home/david/workspace/sainsburys'

    cds () {
        if [[ -z "$1" ]]
        then
            cd $SB_REPOS/ && ls -1
        else
            if [ -d $SB_REPOS/$1 ];
            then
                cd $SB_REPOS/$1
                if [ -f .venv/bin/activate ]; then
                    . .venv/bin/activate
                elif [ -f env/bin/activate ]; then
                    . env/bin/activate
                fi
            fi
        fi

    }

    _cds() {
        COMPREPLY=()
        local cur projects
        projects=$(ls $SB_REPOS)
        _get_comp_words_by_ref cur
        COMPREPLY=( $(compgen -W "${projects}" -- ${cur}) )
    }
    complete -F _cds cds
}

complete_pr() {
    #
    # complete pr with available branches, and open up a github compare
    #
    pr () {
        address="$(parse_git_remote)/compare/$1...$(git rev-parse --abbrev-ref HEAD)"
        xdg-open $address 2> /dev/null
    }

    _pr() {
        COMPREPLY=()
        local cur projects
        branches=$(git branch | awk -F ' +' '! /\(no branch\)/ {print $2}')
        _get_comp_words_by_ref cur
        COMPREPLY=( $(compgen -W "${branches}" -- ${cur}) )
    }

    complete -F _pr pr
}

complete_gm () {
    #
    # Complete gm with files that show up in the git diff
    #
    alias gm='emacs -nw'

    _gm () {
        COMPREPLY=()
        local cur files
        files=$(git diff --name-only 2> /dev/null)
        _get_comp_words_by_ref cur
        COMPREPLY=( $(compgen -W "${files}" -- ${cur}) )
    }

    complete -F _gm gm
}

complete_sb
complete_pr
complete_gm
