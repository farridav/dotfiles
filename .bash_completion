#!/bin/bash

parse_git_remote () {
    git ls-remote --get-url 2> /dev/null | sed s/git@github.com:/https\:\\/\\/github.com\\// | sed s/.git$//
}

complete_gs () {
    GS_REPOS='/Users/david.farrington/workspace/gamesys'

    cdg () {
        if [[ -z "$1" ]]
        then
            cd $GS_REPOS/ && ls -1
        else
            if [ -d $GS_REPOS/$1 ];
            then
                cd $GS_REPOS/$1
                if [ -f .venv/bin/activate ]; then
	                . .venv/bin/activate
                elif [ -f env/bin/activate ]; then
	                . env/bin/activate
                fi
            fi
        fi

    }

    _cdg() {
        COMPREPLY=()
        local cur projects
        projects=$(ls $GS_REPOS)
        _get_comp_words_by_ref cur
        COMPREPLY=( $(compgen -W "${projects}" -- ${cur}) )
    }
    complete -F _cdg cdg
}

complete_os () {
    OS_REPOS='/Users/david.farrington/workspace/opensource'

    cdo () {
        if [[ -z "$1" ]]
        then
            cd $OS_REPOS/ && ls -1
        else
            if [ -d $OS_REPOS/$1 ];
            then
                cd $OS_REPOS/$1
                if [ -f .venv/bin/activate ]; then
	                . .venv/bin/activate
                elif [ -f env/bin/activate ]; then
	                . env/bin/activate
                fi
            fi
        fi

    }

    _cdo() {
        COMPREPLY=()
        local cur projects
        projects=$(ls $OS_REPOS)
        _get_comp_words_by_ref cur
        COMPREPLY=( $(compgen -W "${projects}" -- ${cur}) )
    }
    complete -F _cdo cdo
}

complete_pr() {
    #
    # complete pr with available branches, and open up a github compare
    #
    pr () {
        address="$(parse_git_remote)/compare/$1...$(git rev-parse --abbrev-ref HEAD)"
        open $address 2> /dev/null
    }

    _pr() {
        COMPREPLY=()
        local cur projects
        branches=$(git branch | awk -F ' +' '! /\(no branch\)/ {print $2}')
        _get_comp_words_by_ref cur
        COMPREPLY=( $(compgen -W "${branches}" -- ${cur}) )
    }

    complete -F _pr pr
}

complete_gm () {
    #
    # Complete gm with files that show up in the git diff
    #
    alias gm='emacs -nw'

    _gm () {
        COMPREPLY=()
        local cur files
        files=$(git diff --name-only 2> /dev/null)
        _get_comp_words_by_ref cur
        COMPREPLY=( $(compgen -W "${files}" -- ${cur}) )
    }

    complete -F _gm gm
}

complete_gs
complete_pr
complete_gm
complete_os
